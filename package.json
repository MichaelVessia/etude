{
  "name": "etude",
  "private": true,
  "type": "module",
  "workspaces": ["packages/*"],
  "scripts": {
    "prepare": "effect-language-service patch",
    "dev": "bun run --filter '@etude/server' --filter '@etude/client' dev",
    "build": "bun run --cwd packages/client build",
    "preview": "bun run --cwd packages/client preview",
    "typecheck": "tsc --build packages/shared packages/server && tsc --noEmit -p packages/client",
    "lint": "oxlint packages/",
    "lint:fix": "oxlint --fix packages/",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:ws:worker": "bunx wrangler dev packages/server/src/worker.ts --config wrangler.toml --local",
    "test:ws": "bun test packages/server/tests/ws-integration.test.ts",
    "deploy": "bun run alchemy.run.ts --stage prod",
    "deploy:dev": "bun run alchemy.run.ts --stage dev"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260103.0",
    "@codeforbreakfast/bun-test-effect": "^0.4.1",
    "@effect/language-service": "^0.63.2",
    "@types/bun": "^1.3.5",
    "alchemy": "^0.82.2",
    "miniflare": "^4.20251217.0",
    "oxlint": "^1.36.0",
    "typescript": "^5.9.3",
    "wrangler": "^4.54.0"
  }
}
